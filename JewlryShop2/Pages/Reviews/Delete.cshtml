@page
@model JewlryShop2.Pages.Reviews.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="delete-box">
    <h1 class="delete-heading">Delete Review</h1>
    <p class="delete-text">Are you sure you want to delete this review?</p>

    <div class="delete-details">
        <div><strong>Stars:</strong> @Model.Review.StarAmount</div>
        <div><strong>Review:</strong> @Model.Review.Rewiew</div>
        <div><strong>Jewelry:</strong> @Model.Review.Jewelry?.JewelryName</div>
        <div><strong>Customer:</strong> @Model.Review.Customer?.Name</div>
    </div>

    <form method="post" class="delete-action">
        <input type="hidden" asp-for="Review.ID" />
        <input type="submit" value="Delete" class="btn-danger" />
        <a asp-page="./Index" class="btn-link">Back to List</a>
    </form>
</div>
