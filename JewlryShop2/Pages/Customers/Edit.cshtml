@page
@model JewlryShop2.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<section class="profile-section">
    <h1 class="profile-hero-title">Edit Profile</h1>
    <p class="profile-hero-subtitle">Update your customer details below.</p>

    <div class="form-container">
        <form method="post" class="styled-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.ID" />

            <div class="form-group">
                <label asp-for="Customer.Name" class="form-label"></label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger small-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="Customer.Gmail" class="form-label"></label>
                <input asp-for="Customer.Gmail" class="form-control" />
                <span asp-validation-for="Customer.Gmail" class="text-danger small-text"></span>
            </div>

           <div class="form-group">
                <label asp-for="Customer.Password" class="form-label"></label>
                @* // ככה זה לא גלוי
                <input asp-for="Customer.Password" class="form-control" type="password" /> *@
                <input asp-for="Customer.Password" class="form-control" type="text" style="-webkit-text-security: disc;" />
                <span asp-validation-for="Customer.Password" class="text-danger small-text"></span>
            </div> 

            <div class="form-group">
                <label asp-for="Customer.ClubMembership" class="form-label"></label>
                <select asp-for="Customer.ClubMembership" class="form-control">
                    <option>Yes</option>
                    <option>No</option>
                </select>
                <span asp-validation-for="Customer.ClubMembership" class="text-danger small-text"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn-gold">Save Changes</button>
                <a asp-page="./Index" class="btn-link ms-3">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
