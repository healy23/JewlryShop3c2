@page
@model JewlryShop2.Pages.Reviews.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<section class="form-container">
    <h1 class="form-title" style="color: #d63384;">Review Details 🌟</h1>

    <div class="styled-details">
        <dl>
            <dt>Stars:</dt>
            <dd>@Model.Review.StarAmount</dd>

            <dt>Review Text:</dt>
            <dd>@Model.Review.Rewiew</dd>

            <dt>Jewelry:</dt>
            <dd>@Model.Review.Jewelry?.JewelryName</dd>

            <dt>Customer:</dt>
            <dd>@Model.Review.Customer?.Name</dd>
        </dl>
    </div>

    <div class="profile-actions mt-4">
        <a class="btn-gold" asp-page="./Edit" asp-route-id="@Model.Review.ID">✏️ Edit</a>
        <a class="btn-link ms-3" asp-page="./Index">← Back to List</a>
    </div>
</section>
