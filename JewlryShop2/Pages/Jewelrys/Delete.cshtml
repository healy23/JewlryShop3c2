@page
@model JewlryShop2.Pages.Jewelrys.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="delete-box">
    <h1 class="delete-heading">Delete Jewelry</h1>
    <p class="delete-text">Are you sure you want to delete this jewelry item?</p>

    <div class="delete-details">
        <div><strong>Name:</strong> @Model.Jewelry.JewelryName</div>
        <div><strong>Price:</strong> @Model.Jewelry.Price</div>
        <div><strong>Material:</strong> @Model.Jewelry.Material</div>
    </div>

    <form method="post" class="delete-action">
        <input type="hidden" asp-for="Jewelry.JewelryID" />
        <input type="submit" value="Delete" class="btn-danger" />
        <a asp-page="./Index" class="btn-link">Back to List</a>
    </form>
</div>
