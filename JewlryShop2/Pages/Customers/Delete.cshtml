@page
@model JewlryShop2.Pages.Customers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<section class="delete-box">
    <h1 class="delete-heading"> Delete Account 🗑️</h1>
    <p class="delete-text">Are you sure you want to delete this account? This action cannot be undone.</p>

    <div class="delete-details">
        <div><strong>Name:</strong> @Model.Customer.Name</div>
        <div><strong>Email:</strong> @Model.Customer.Gmail</div>
    </div>

    <form method="post" class="delete-action">
        <input type="hidden" asp-for="Customer.ID" />
        <button type="submit" class="btn-danger">Yes, Delete</button>
        <a asp-page="./Index" class="btn-link">Cancel</a>
    </form>
</section>
