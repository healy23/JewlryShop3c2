@page
@model JewlryShop2.Pages.Carts.EditModel

@{
    ViewData["Title"] = "Edit Cart";
}

<div class="form-container">
    <h1 class="form-title"> Edit Cart 🛒</h1>
    <p class="form-subtitle">Update the customer associated with this cart.</p>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Cart.CartId" />

        <div class="form-group">
            <label asp-for="Cart.CustomerName" class="form-label">Customer</label>
            <select asp-for="Cart.CustomerID" class="form-control" asp-items="ViewBag.CustomerID">
                <option disabled selected>Choose a customer</option>
            </select>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value=" Save Changes 💾" class="btn-gold" />
            <a asp-page="./Index" class="btn-link ms-3">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
