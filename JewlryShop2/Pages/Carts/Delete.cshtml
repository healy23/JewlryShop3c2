@page
@model JewlryShop2.Pages.Carts.DeleteModel

@{
    ViewData["Title"] = "Delete Cart";
}

<div class="delete-box">
    <h1 class="delete-heading">🗑️ Delete Cart</h1>
    <p class="delete-text">Are you sure you want to remove this cart from the system?</p>

    <div class="delete-details">
        <div><strong>Customer:</strong> @Model.Cart.Customer.Name</div>

    </div>

    <form method="post" class="delete-action">
        <input type="hidden" asp-for="Cart.CartId" />
        <input type="submit" value="Delete" class="btn-danger" />
        <a asp-page="./Index" class="btn-link">Back to List</a>
    </form>
</div>
