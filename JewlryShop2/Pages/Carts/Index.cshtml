@model JewlryShop2.Pages.Carts.IndexModel

@{
    ViewData["Title"] = "Carts";
}

<div class="table-wrapper">
    <h1 class="hero-title">Carts</h1>

    <p>
        <a class="btn-gold" asp-page="Create">+ Create New Cart</a>
    </p>

    <table class="styled-table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Cart Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Customer.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.CartId)</td>
                    <td>
                        <a class="btn-gold" asp-page="/Items/CartItems.lst" asp-route-CartId="@item.CartId">Items in cart</a> |
                        @if (HttpContext.Session.GetString("UserType") == "Admin")
                        {
                              <a class="btn-link" asp-page="./Edit" asp-route-id="@item.CartId">Edit</a>
                                        
                        }
                        @* <a class="btn-link" asp-page="./Edit" asp-route-id="@item.CartId">Edit</a> | *@
                       @*  <a class="btn-link" asp-page="./Details" asp-route-id="@item.CartId">Details</a> | *@
                        <a class="btn-link danger" asp-page="./Delete" asp-route-id="@item.CartId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
