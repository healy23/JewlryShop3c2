@page
@model JewlryShop2.Pages.Jewelrys.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>תכשיטים</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <div>
        <p>
            Find by Material:
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-page="./Index">Back to full List</a>
            
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
               @*  @Html.DisplayNameFor(model => model.Jewelry[0].JewelryName) *@
                Jewelry Name            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jewelry[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jewelry[0].Price)
            </th>
            <th>
               IMAGE
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Jewelry) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JewelryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                <td >
                    <img src="~/images/@item.ImageName" width="150" height="150 " />
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.JewelryID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.JewelryID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.JewelryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
